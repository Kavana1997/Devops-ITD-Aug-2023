pipeline {
    agent any 

    tools {
        maven 'Localmaven'
    }

    stages {
        stage ('Build-Maven') {
            steps {
                sh '''
                    cd ./maven/simple-war/
                    mvn clean package
                    cd ./target/
                    ls
                '''
            }
        }

        stage ('Deploy-Tomcat') {
            steps {
                script {
                    deploy adapters: [tomcat9(credentialsId: 'tomcat', path: '', url: 'http://54.84.102.17:9090//')], 
                                     contextPath: '/', 
                                     war: '**/*.war'
                }
            }
        }
    }

}
